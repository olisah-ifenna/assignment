      <script>
        window.onload = function(){
          let productray = JSON.parse(localStorage.getItem("cartitem")) || [];
          let itemNos = document.getElementById("badge");
          itemNos.innerText = productray.length || 0;
        
          let display = document.getElementById('cart');
          let cart_tray = document.getElementById('tray');
          
          display.addEventListener('click', function () {
            cart_tray.style.display = 'block';
            cart_tray.innerHTML = ''; // Clear the tray before appending new content
            
            let cart_item = document.createElement('div');
            cart_item.setAttribute('class', 'content');
            
            cart_item.innerHTML = `<div id="trayHead">
                                     <span class="cancel-icon">&#10060;</span>
                                     <h2>Your Shopping Cart</h2>
                                     <div class="checkout"></div>
                                     <div class="head"></div>`;
            
            if(productray.length === 0) {
              cart_item.innerHTML += `<p>Your cart is empty!</p>`;
            } else {
              for(let i = 0; i < productray.length; i++) {
                cart_item.innerHTML += `<div class="item">
                                          <img src="${productray[i]['img']}" alt="Product Image">
                                          <div class="item-details">
                                            <h3>${productray[i]['title']}</h3>
                                            <p>Description: ${productray[i]['description']}</p>
                                            <p class="price">Price: ${productray[i]['price']}</p>
                                          </div>
                                        </div>`;
              }
            }
            
            cart_item.innerHTML += `<a href="/payment"><button type="button">Place Order</button></a>
                                    <button id="clearCartButton">Clear Cart</button>`;
            
            cart_tray.appendChild(cart_item);
        
            // Clear Cart functionality
            const clearCartButton = document.getElementById('clearCartButton');
            clearCartButton.addEventListener('click', () => {
              localStorage.removeItem('cartitem');
              location.reload();
            });
        
            // Close the cart
            const cancelicon = cart_item.querySelector('.cancel-icon');
            cancelicon.addEventListener('click', () => {
              cart_tray.style.display = 'none';
            });
          });
        
          document.addEventListener('DOMContentLoaded', function(){
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
        
            addToCartButtons.forEach(button => {
              button.addEventListener('click', function(e){
                e.preventDefault();
                const productId = this.getAttribute('id');
        
                // Simulating a product object returned from the server based on productId
                const products = [
                  { id: "1", title: "Product 1", description: "Product 1 description", price: "$10", img: "img/product1.jpg" },
                  { id: "2", title: "Product 2", description: "Product 2 description", price: "$20", img: "img/product2.jpg" }
                ];
        
                const product = products.find(p => p.id === productId);
                if(product){
                  let productray = JSON.parse(localStorage.getItem("cartitem")) || [];
                  productray.push(product);
        
                  localStorage.setItem("cartitem", JSON.stringify(productray));
                  location.reload();
                }
              });
            });
          });
        }
      </script>  
